<idea-plugin>
    <id>launch-url-from-string</id>
    <name>Launch URL from String</name>
    <version>1.0b2</version>
    <vendor email="paul.schaaf+intellij@gmail.com" url="https://github.com/paulschaaf/launch-url-from-string">
        Paul Schaaf
    </vendor>

    <description><![CDATA[
        Enables hyperlink navigation from any matching string literal,<br/>
        xml attribute value or xml element text to a URL defined by the <br/>
        "Issue Navigation" rules in the VCS settings.<br/>
    ]]>
    </description>

    <change-notes><![CDATA[
    <ul>
      <li>1.0 Initial release
     </ul>]]></change-notes>

    <idea-version since-build="120.0"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor implementation="com.pgschaaf.launchurlfromstring.RegexReferenceContributor"/>
    </extensions>

</idea-plugin>